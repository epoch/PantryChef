<div class="page-center">
	<h1>My Shopping List</h1>
	
	<%= form_tag shopping_list_index_path do  %>
		<% @ingredients.each do |ingredient|  %>
			<p>
				<%= check_box_tag ingredient, ingredient %>
				<%= label_tag ingredient  %>
			</p>
		<% end %>
	<% end %>
	
	<button><%=link_to_function("Print Shopping List", "javascript:print()")%></button>
</div>

