<!DOCTYPE html>
<html>
<head>
  <title>PantryChef</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	
 
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation" id="nav-bar-main">
  <div class="container" id="cont">
	
	<p id="logo" class="navbar-text"><%= link_to 'PantryChef', root_path  %></p>
	
  <div class="collapse navbar-collapse" id="user-nav">
    <ul class="nav navbar-nav"> 
      <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= current_user.name.capitalize %>! <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to 'View Saved Recipes', recipe_boxes_path %></li>
            <li class="divider"></li>
            <li><%= link_to 'Logout', new_session_path,  :method => :delete, :data => {:confirm => 'Are you sure you want to log out?'}  %></li>
          </ul>
        </li>

			<% else %>
				<p class="navbar-text navbar-right"><%= link_to 'Login', new_session_path  %></p>
				<p class="navbar-text navbar-right"><%= link_to 'Sign Up', new_user_path %></p>
		<% end %>

    </ul>
	</div>


	</div>
</nav>

<%= yield %>

</body>
</html>
